<% nav_links.each do |link| %>
  <%= link_to link[:path], class: "group" do %>
    <span><%= link[:name] %></span>
    <%= tag.div(
      class: [
        "-mt-0.5 rounded-full h-1 bg-brand-500 group-hover:w-full transition-all ease-in-out",
        "w-0": !current_page?(link[:path])
      ]
    ) %>
  <% end %>
<% end %>
