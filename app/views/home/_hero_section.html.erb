<%= render "section" do %>
  <% if @upcoming_event %>
    <% event = EventDetails.new(@upcoming_event) %>

    <div>
      <div class="sm:hidden space-y-2 mb-10">
        <div class="flex justify-center items-center gap-2 text-brand-600 font-bold">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-5 h-5"
          >
            <path
              d="M15.98 1.804a1 1 0 00-1.96 0l-.24 1.192a1 1 0 01-.784.785l-1.192.238a1 1 0 000 1.962l1.192.238a1 1 0 01.785.785l.238 1.192a1 1 0 001.962 0l.238-1.192a1 1 0 01.785-.785l1.192-.238a1 1 0 000-1.962l-1.192-.238a1 1 0 01-.785-.785l-.238-1.192zM6.949 5.684a1 1 0 00-1.898 0l-.683 2.051a1 1 0 01-.633.633l-2.051.683a1 1 0 000 1.898l2.051.684a1 1 0 01.633.632l.683 2.051a1 1 0 001.898 0l.683-2.051a1 1 0 01.633-.633l2.051-.683a1 1 0 000-1.898l-2.051-.683a1 1 0 01-.633-.633L6.95 5.684zM13.949 13.684a1 1 0 00-1.898 0l-.184.551a1 1 0 01-.632.633l-.551.183a1 1 0 000 1.898l.551.183a1 1 0 01.633.633l.183.551a1 1 0 001.898 0l.184-.551a1 1 0 01.632-.633l.551-.183a1 1 0 000-1.898l-.551-.184a1 1 0 01-.633-.632l-.183-.551z"
            />
          </svg>

          <span>Upcoming event</span>
        </div>

        <div class="flex flex-col">
          <%= secondary_button event do %>
            <span class="font-medium">
              Join us on
              <span class="font-bold">
                <%= event.human_datetime(:short) %>
              </span>
            </span>

            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="w-5 h-5"
            >
              <path
                fill-rule="evenodd"
                d="M2 10a.75.75 0 01.75-.75h12.59l-2.1-1.95a.75.75 0 111.02-1.1l3.5 3.25a.75.75 0 010 1.1l-3.5 3.25a.75.75 0 11-1.02-1.1l2.1-1.95H2.75A.75.75 0 012 10z"
                clip-rule="evenodd"
              />
            </svg>
          <% end %>
        </div>
      </div>

      <div class="hidden sm:block mb-10">
        <%= secondary_button event do %>
          <div class="flex items-center gap-2 text-brand-600 font-bold">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="w-5 h-5"
            >
              <path
                d="M15.98 1.804a1 1 0 00-1.96 0l-.24 1.192a1 1 0 01-.784.785l-1.192.238a1 1 0 000 1.962l1.192.238a1 1 0 01.785.785l.238 1.192a1 1 0 001.962 0l.238-1.192a1 1 0 01.785-.785l1.192-.238a1 1 0 000-1.962l-1.192-.238a1 1 0 01-.785-.785l-.238-1.192zM6.949 5.684a1 1 0 00-1.898 0l-.683 2.051a1 1 0 01-.633.633l-2.051.683a1 1 0 000 1.898l2.051.684a1 1 0 01.633.632l.683 2.051a1 1 0 001.898 0l.683-2.051a1 1 0 01.633-.633l2.051-.683a1 1 0 000-1.898l-2.051-.683a1 1 0 01-.633-.633L6.95 5.684zM13.949 13.684a1 1 0 00-1.898 0l-.184.551a1 1 0 01-.632.633l-.551.183a1 1 0 000 1.898l.551.183a1 1 0 01.633.633l.183.551a1 1 0 001.898 0l.184-.551a1 1 0 01.632-.633l.551-.183a1 1 0 000-1.898l-.551-.184a1 1 0 01-.633-.632l-.183-.551z"
              />
            </svg>

            <span>Upcoming event</span>
          </div>

          <span class="mx-1 h-5 w-px bg-black/50" aria-hidden="true"></span>

          <span class="font-medium">
            Join us on
            <span class="font-bold hidden xl:inline">
              <%= event.human_datetime %>
            </span>
            <span class="font-bold xl:hidden">
              <%= event.human_datetime(:short) %>
            </span>
          </span>

          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-5 h-5"
          >
            <path
              fill-rule="evenodd"
              d="M2 10a.75.75 0 01.75-.75h12.59l-2.1-1.95a.75.75 0 111.02-1.1l3.5 3.25a.75.75 0 010 1.1l-3.5 3.25a.75.75 0 11-1.02-1.1l2.1-1.95H2.75A.75.75 0 012 10z"
              clip-rule="evenodd"
            />
          </svg>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="grid gap-6">
    <h1 class="text-4xl sm:text-5xl font-black">
      <span class="text-brand-600">Ruby Banitsa</span>
      is an event filled with
      <span class="text-brand-600">Ruby</span>
      and
      <span class="text-brand-600">Banitsa</span>
    </h1>

    <p class="text-xl">
      We get together in Sofia, Bulgaria, nom some fresh pastry and talk about
      tech. All this in a casual setting.
    </p>

    <div class="flex flex-col sm:flex-row">
      <%= primary_button "mailto:gsamokovarov+rubybanitsa@gmail.com?subject=Ruby Banitsa talk" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
          fill="currentColor"
          class="w-5 h-5"
        >
          <path d="M7 4a3 3 0 016 0v6a3 3 0 11-6 0V4z"/>
          <path
            d="M5.5 9.643a.75.75 0 00-1.5 0V10c0 3.06 2.29 5.585 5.25 5.954V17.5h-1.5a.75.75 0 000 1.5h4.5a.75.75 0 000-1.5h-1.5v-1.546A6.001 6.001 0 0016 10v-.357a.75.75 0 00-1.5 0V10a4.5 4.5 0 01-9 0v-.357z"
          />
        </svg>
        <span>Become a speaker</span>
      <% end %>
    </div>

    <div
      class="
        -mx-4
        px-4
        h-72
        flex
        overflow-x-auto
        snap-x
        snap-mandatory
        sm:mx-0
        sm:px-0
        sm:snap-none
        sm:h-auto
        sm:grid
        sm:items-start
        sm:grid-rows-[repeat(4,160px)]
        sm:grid-cols-3
        gap-4
      "
    >
      <%= image_tag "hero/puzl",
      alt: "Ruby Banitsa event",
      class:
        "snap-always snap-center border-2 border-black rounded-md shrink-0 w-10/12 sm:w-full h-full object-cover row-span-2 col-span-2",
      lazy: true %>

      <%= image_tag "hero/stefan",
      alt: "Ruby Banitsa event",
      class:
        "snap-always snap-center border-2 border-black rounded-md shrink-0 w-10/12 sm:w-full h-full object-cover",
      lazy: true %>

      <%= image_tag "hero/genadi",
      alt: "Ruby Banitsa event",
      class:
        "snap-always snap-center border-2 border-black rounded-md shrink-0 w-10/12 sm:w-full h-full object-cover row-span-2",
      lazy: true %>

      <%= image_tag "hero/mitio",
      alt: "Ruby Banitsa event",
      class:
        "snap-always snap-center border-2 border-black rounded-md shrink-0 w-10/12 sm:w-full h-full object-cover object-left row-span-2",
      lazy: true %>

      <%= image_tag "hero/code",
      alt: "Ruby Banitsa event",
      class:
        "snap-always snap-center border-2 border-black rounded-md shrink-0 w-10/12 sm:w-full h-full object-cover object-top",
      lazy: true %>

      <%= image_tag "hero/banitsa",
      alt: "Ruby Banitsa event",
      class:
        "snap-always snap-center border-2 border-black rounded-md shrink-0 w-10/12 sm:w-full h-full object-cover col-span-2",
      lazy: true %>
    </div>
  </div>
<% end %>
