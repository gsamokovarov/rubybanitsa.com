<% content_for :head do %>
  <meta property="og:title" content="<%= job.title %>">
  <meta property="og:site_name" content="Ruby Banitsa">
  <meta property="og:url" content="<%= request.host %>">
  <meta property="og:description" content="<%= job_render job, plain: true %>">
  <meta property="og:type" content="website">
  <% if job.logo.attached? %>
  <meta property="og:image" content="<%= url_for job.logo %>">
  <% end %>
<% end %>
