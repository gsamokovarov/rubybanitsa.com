<% e = EventInfo.new(event) %>

<%= title e.human_date %>

<%= render 'events/ogp', e: e %>

<article class="event">
  <%= link_to root_path do %>
    <h1>
      <%= e.human_date %>
      <%= upcoming_event_badge e %>
    </h1>
  <% end %>

  <%= render_markdown e.description %>

  <% if e.talks.present? %>
    <h2>Talks</h2>

    <%= render e.talks %>
  <% end %>

  <h2><%= e.venue %> at <time><%= e.human_time %></time></h2>

  <%= map_tag event %>
  <address><%= e.address %></address>

  <% if e.links? %>
    <h2>Links</h2>

    <ul>
      <% if e.meetup_url.present? %>
      <li><%= link_to 'Meetup', e.meetup_url %></li>
      <% end %>

      <% if e.facebook_url.present? %>
      <li><%= link_to 'Facebook', e.facebook_url %></Faceboo>
      <% end %>
    </ul>
  <% end %>
</article>
