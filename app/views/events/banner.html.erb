<% event = EventDetails.new(@event) %>

<section class="w-[960px] flex justify-evenly">
  <div class="flex flex-col justify-center">
    <div class="font-medium px-6 py-5">
      <div class="shrink-0">
        <div class="flex items-center gap-3">
          <%= render "logo_icon", classes: "w-16 h-16" %>
          <%= image_tag "logo-text.svg", class: "h-10 w-auto", alt: "Ruby Banitsa logo text" %>
        </div>
      </div>
    </div>

    <div class="px-6 py-5 flex items-center justify-between">
      <div>
        <div class="flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-8 h-8"
