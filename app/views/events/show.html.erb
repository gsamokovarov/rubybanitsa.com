      </svg>

      <div class="font-mono">
        <time datetime="<%= event.time.iso8601 %>">
          <%= event.human_datetime %>
        </time>
      </div>
    </div>
  </div>

  <% if event.upcoming? || event.joinable? %>
    <div class="flex flex-col sm:flex-row gap-x-6 gap-y-4">
      <% if event.joinable? %>
        <%= primary_button join_url do %>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-5 h-5"
          >
            <path
              d="M3.25 4A2.25 2.25 0 001 6.25v7.5A2.25 2.25 0 003.25 16h7.5A2.25 2.25 0 0013 13.75v-7.5A2.25 2.25 0 0010.75 4h-7.5zM19 4.75a.75.75 0 00-1.28-.53l-3 3a.75.75 0 00-.22.53v4.5c0 .199.079.39.22.53l3 3a.75.75 0 001.28-.53V4.75z"
            />
          </svg>
          <span>Join us online</span>
        <% end %>
      <% elsif event.upcoming? %>
        <%= primary_button event_path(@event, format: "ics") do %>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-5 h-5"
          >
            <path
